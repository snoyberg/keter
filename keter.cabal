  hs-source-dirs:      incoming/foo
  Build-depends:       base
                     , keter
                     , warp
                     , wai
                     , wai-extra
                     , http-types
                     , bytestring
                     , directory
                     , data-default
                     , transformers
  ghc-options:         -threaded -Wall

source-repository head
  type:     git
  location: https://github.com/snoyberg/keter
