                     , wai                       >= 1.4           && < 1.5
                     , http-types
                     , regex-tdfa                >= 1.1
                     , attoparsec                >= 0.10
                     , http-conduit
                     , case-insensitive
                     , array
                     , mtl
                     , warp
                     , warp-tls
                     , aeson
                     , unordered-containers
                     , vector
                     , stm
                     , async
